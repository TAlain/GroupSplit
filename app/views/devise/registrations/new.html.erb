<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div> <%= f.text_field :username, autofocus: true, placeholder:"Username" %></div>
<br>
  <div> <%= f.email_field :email, placeholder:'Email'%></div>
  <br>
  <div><%= f.password_field :password, autocomplete: "off", placeholder:"Password (#{@minimum_password_length} characters)"%></div>
  <br>
  <div> <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation"%></div>
  <br>
  <div><%= f.submit "Sign up" , class:"btn btn-primary"%></div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
