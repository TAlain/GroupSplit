<div class="col-xs-3">
<% @groups.each do |group| %>
  <div class="panel panel-default">
       <b><%= label_tag "Group:"%> <%= label_tag group.name%></b>
    <%= link_to "Calculate", calculate_split_expenses_groups_path(group, group.id)%> |
    <%= link_to "Show Bills", show_bills_groups_path(group, group.id)%> |
      <% if current_user.id == group.owner_id %>
        <%= link_to "Edit", group_path(group.id)%> |
      <%end%>
      </br>
    <div class="panel-body">
      <% group.users.each do |user| %>
       <%= label_tag user.username, nil, class:"label label-default" %>
      <% end %>

    </div>
  </div>
<% end %>
  <%= link_to "Create new Group", new_group_path, class: "btn btn-primary"%> <br>
</div>
